    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "Free Online Image Compression Tool",
      "url": "https://yourwebsite.com",
      "description": "Compress and optimize your images online for free. Reduce file size without losing quality.",
      "applicationCategory": "MultimediaApplication",
      "operatingSystem": "Any",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
